          ul.navbar-nav.me-auto.mb-2.mb-lg-0
            li.nav-item
              = nav_link('Details', '/index.html', { class: 'nav-link' })
            li.nav-item
              = nav_link('Register', '/registration.html', { class: 'nav-link' })
